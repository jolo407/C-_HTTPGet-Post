@{
    ViewData["Title"] = "Calendar";
}

@section Styles{
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
<link rel="stylesheet" href="/css/styles/calendar.css">
}

<div class="secParent">
<div id="section-list" class="section">


    <div>
        <button id="btnShowDetails" class="btn btn-primary" value="Show details">
            <i class="fas fa-eye"></i>
            Show Details
        </button>
    </div>
    <div id="pendingTasks">



    </div>

</div>



<div id="section-form" class="section">
    <h3>Tasks</h3>
    <div id="alertError" class="alert alert-danger">
        Error: Verify Title

    </div>

    <input id="title" type="text" class="control" placeholder="Task Title">

    <label class="control">Is it Important? <i id="iconImp" class="far fa-star"></i></label>

    <h4>Start Date</h4>
    <input id="date" type="datetime-local" class="control" placeholder="Date">
    <h5>End Date</h5>
    <input id="endDate" type="datetime-local" class="control" placeholder="endDate">
    <div id="dateAlert" class="alert alert-danger">
        Error: End date must be greater than start date
    </div>

    <textarea id="description" class="control" placeholder="Description"></textarea>

    <input id="location" type="text" class="control" placeholder="Location">

    <button id="btn-save" class="btn btn-primary"> <i class="fas fa-save"></i> Save</button>
</div>
</div>

@section Scripts{
<script src="/js/scripts/task.js"></script>
<script src="/js/scripts/calendar.js"></script>
}





